{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "paths": {
      "@types": ["src/types"],
      "@utils": ["src/utils"],
      "@markdown": ["src/markdown"],
      "@observer": ["src/observer"],
      "@fragments": ["src/fragments"],
      "@context-menu": ["src/context-menu"],
      "@context-menu/*": ["src/context-menu/*"],
      "@settings": ["src/settings.ts"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}